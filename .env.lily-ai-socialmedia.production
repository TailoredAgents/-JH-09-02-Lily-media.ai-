# ===============================================
# Lily AI Social Media - Production Environment Configuration
# Domain: www.lily-ai-socialmedia.com
# ===============================================
# 
# IMPORTANT: This is a production configuration template.
# Copy this file to .env in production and fill in actual values.
# Never commit real API keys or secrets to version control.

# ===============================================
# CORE APPLICATION SETTINGS
# ===============================================
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=your-super-secure-production-secret-key-min-32-chars-change-this
API_VERSION=v1
PORT=8000
HOST=0.0.0.0

# ===============================================
# DOMAIN AND BRANDING
# ===============================================
APP_NAME=Lily AI Social Media
APP_DOMAIN=lily-ai-socialmedia.com
APP_URL=https://www.lily-ai-socialmedia.com
API_URL=https://api.lily-ai-socialmedia.com

# ===============================================
# DATABASE CONFIGURATION
# ===============================================
# PostgreSQL for production
DATABASE_URL=postgresql://lily_ai_user:your_secure_db_password@postgres:5432/lily_ai_socialmedia
POSTGRES_PASSWORD=your_secure_db_password
POSTGRES_URL=postgresql://lily_ai_user:your_secure_db_password@postgres:5432/lily_ai_socialmedia

# ===============================================
# REDIS & BACKGROUND TASKS
# ===============================================
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ===============================================
# SECURITY & CORS - Updated for Lily AI Social Media
# ===============================================
ALLOWED_HOSTS=lily-ai-socialmedia.com,www.lily-ai-socialmedia.com,api.lily-ai-socialmedia.com
CORS_ORIGINS=https://lily-ai-socialmedia.com,https://www.lily-ai-socialmedia.com

# ===============================================
# JWT AUTHENTICATION
# ===============================================
JWT_SECRET=your-jwt-production-secret-key-different-from-main-secret
JWT_ALGORITHM=HS256
JWT_ACCESS_TTL_SECONDS=900
JWT_REFRESH_TTL_SECONDS=1209600

# ===============================================
# AI SERVICES (REQUIRED FOR CORE FUNCTIONALITY)
# ===============================================
OPENAI_API_KEY=sk-your-production-openai-api-key-here
SERPER_API_KEY=your-production-serper-api-key-here

# ===============================================
# SOCIAL MEDIA PLATFORM APIs
# ===============================================

# Twitter/X API v2 (Production Keys)
TWITTER_API_KEY=your_production_twitter_api_key
TWITTER_API_SECRET=your_production_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_production_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_production_twitter_access_token_secret
TWITTER_BEARER_TOKEN=your_production_twitter_bearer_token

# LinkedIn API (Production Keys)
LINKEDIN_CLIENT_ID=your_production_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_production_linkedin_client_secret
LINKEDIN_ACCESS_TOKEN=your_production_linkedin_access_token
LINKEDIN_USER_ID=your_production_linkedin_user_id

# Instagram Business API (Production Keys)
INSTAGRAM_APP_ID=your_production_instagram_app_id
INSTAGRAM_APP_SECRET=your_production_instagram_app_secret
INSTAGRAM_ACCESS_TOKEN=your_production_instagram_access_token
INSTAGRAM_BUSINESS_ID=your_production_instagram_business_id

# Facebook API (Production Keys)
FACEBOOK_APP_ID=your_production_facebook_app_id
FACEBOOK_APP_SECRET=your_production_facebook_app_secret
FACEBOOK_ACCESS_TOKEN=your_production_facebook_access_token
FACEBOOK_PAGE_ID=your_production_facebook_page_id
FACEBOOK_PAGE_ACCESS_TOKEN=your_production_facebook_page_access_token

# ===============================================
# FEATURE FLAGS & CONFIGURATION
# ===============================================
FEATURE_FLAGS=USE_STUB_INTEGRATIONS=0,WORKFLOW_V2=1,ENABLE_DEEP_RESEARCH=1

# Production Features
DEMO_MODE=false
MOCK_SOCIAL_APIS=false
SHOW_SAMPLE_DATA=false
ENABLE_REGISTRATION=true
REQUIRE_EMAIL_VERIFICATION=false

# ===============================================
# OBSERVABILITY & MONITORING
# ===============================================
# OpenTelemetry (Optional - for advanced monitoring)
OTEL_SERVICE_NAME=lily-ai-socialmedia-production
OTEL_EXPORTER_OTLP_ENDPOINT=your-observability-endpoint-here

# Logging
LOG_LEVEL=INFO
ENABLE_ACCESS_LOGS=true
ENABLE_ERROR_TRACKING=true

# ===============================================
# EMAIL & NOTIFICATIONS (Optional)
# ===============================================
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USERNAME=noreply@lily-ai-socialmedia.com
SMTP_PASSWORD=your-smtp-app-password
EMAIL_FROM=Lily AI Social Media <noreply@lily-ai-socialmedia.com>

# ===============================================
# TIMEZONE & LOCALIZATION
# ===============================================
TIMEZONE=America/New_York

# ===============================================
# DEPLOYMENT PLATFORM SETTINGS
# ===============================================
# Python version for deployment platforms
PYTHON_VERSION=3.11.9

# SSL and Security
FORCE_HTTPS=true
SECURE_COOKIES=true
SESSION_COOKIE_SECURE=true
CSRF_COOKIE_SECURE=true

# ===============================================
# OPTIONAL: GRAFANA MONITORING PASSWORD
# ===============================================
GRAFANA_PASSWORD=your-secure-grafana-admin-password

# ===============================================
# SOCIAL MEDIA OAUTH REDIRECT URLS (Production)
# ===============================================
TWITTER_REDIRECT_URI=https://www.lily-ai-socialmedia.com/auth/twitter/callback
LINKEDIN_REDIRECT_URI=https://www.lily-ai-socialmedia.com/auth/linkedin/callback
INSTAGRAM_REDIRECT_URI=https://www.lily-ai-socialmedia.com/auth/instagram/callback
FACEBOOK_REDIRECT_URI=https://www.lily-ai-socialmedia.com/auth/facebook/callback

# ===============================================
# DEPLOYMENT NOTES
# ===============================================
# 
# 1. SSL Certificate Setup:
#    - Obtain SSL certificates for lily-ai-socialmedia.com
#    - Include subdomains: www, api, monitoring
#    - Place certificates in ./ssl/ directory
# 
# 2. DNS Configuration:
#    - Point lily-ai-socialmedia.com to your server IP
#    - Set up CNAME for www.lily-ai-socialmedia.com
#    - Set up CNAME for api.lily-ai-socialmedia.com
# 
# 3. Security:
#    - Generate strong, unique secrets for SECRET_KEY and JWT_SECRET
#    - Use different secrets for different environments
#    - Regularly rotate API keys and secrets
# 
# 4. Database:
#    - Create backups before deployment
#    - Run migrations: alembic upgrade head
#    - Monitor database performance
# 
# 5. Monitoring:
#    - Access Grafana at monitoring.lily-ai-socialmedia.com:3000
#    - Default username: admin, password: set via GRAFANA_PASSWORD
#    - Configure alerts for system health